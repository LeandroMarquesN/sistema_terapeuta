{
  // Prettier como formatador padrão
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Formata ao salvar
  "editor.formatOnSave": true,

  // Organiza imports ao salvar
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Tamanho da indentação
  "editor.tabSize": 2,

  // Suporte a arquivos .env
  "files.associations": {
    ".env*": "dotenv"
  },

  // Evita aviso de formatação para arquivos grandes
  "editor.largeFileOptimizations": false,

  // Prettier: aspas simples e ponto e vírgula
  "prettier.singleQuote": true,
  "prettier.semi": true,

  // Controla linhas máximas (opcional)
  "editor.rulers": [100],

  // Suporte melhorado para SQLTools
  "sqltools.connections": [],

  // Remove trailing spaces ao salvar
  "files.trimTrailingWhitespace": true
}
